import 'dart:io';

void main() {
  stdout.write('Enter a number to show its multiplication table: ');
  int num = int.parse(stdin.readLineSync()!);

  for (int i = 1; i <= 10; i++) {
    print('$num x $i = ${num * i}');
  }
  stdout.write('Would you like to check another number? (yes/no): ');
  String response = stdin.readLineSync()!;
  
  if (response.toLowerCase() == 'yes') {
    main(); // Recursively call main to restart the process
  } else {
    print('Goodbye!');
  }
}
